<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <corners android:radius="5dp" />
    <!--实现应用背景颜色渐变
      startColor 开始颜色
      endColor结束颜色
      0：是从左到右
      90：是从下到上
      180：是从右到左
      270：是从上到下 -->
    <gradient
        android:angle="0"
        android:endColor="#F0F8E6"
        android:startColor="#F0F8E6" />
</shape>